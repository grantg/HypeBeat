<div class="col-md-12">
    <div class="container col-md-8 offset-md-2">
        <h2 class="h2 text-center"><%= @user.fname %> <%= @user.lname %></h2>
        <br>
        <table class="table col-md-6 offset-md-3">
            <tr>
                <td>Email:</td>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <td>Birthday:</td>
                <td><%= @user.birth_date.strftime("%m/%d/%Y") %></td>
            </tr>
            <tr>
                <td>Favorite Class:</td>
                <td><%= @user.favorite_class %></td>
            </tr>
            <tr>
                <td>Bio:</td>
                <td><%= @user.bio %></td>
            </tr>
        </table>
        <% @getUserName.each do |comment| %>
        <div><%=%></div>
       <div><%= comment.comment_text %></div>
        <% end %>
        <%= form_for Comment.new, url: create_comment_path do |f| %>
            <div class="form-group col-md-6">
            <%= f.hidden_field :users_id, :value => current_user.id %>
            <%= f.hidden_field :sent_to, autocomplete: "off", :required => true, id: :comment_sent_to, :value => @user.id, :class => 'form-control' %>
            <%= f.text_area :comment_text, placeholder: "Write your comment here...", :class => 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>

        <div class="text-center">
            <%= link_to 'Back', users_path, :class => "btn btn-light btn-sm" %> 
            <% if @user.id == current_user.id %>
                <%= link_to 'Edit My Profile', edit_user_path(current_user), :class => "btn btn-sm btn-light" %>
            <% else %>
            <% end %>
        </div>
    </div>
</div>


<p id="notice"><%= notice %></p>


