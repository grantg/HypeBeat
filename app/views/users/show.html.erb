<div class="col-md-12">
    <div class="container col-md-8 offset-md-2">
        <h2 class="h2 text-center">User Profile Template</h2>
        <table class="table col-md-6">
            <tr>
                <td>Name:</td>
                <td><%= @user.fname %> <%= @user.lname %></td>
            </tr>
            <tr>
                <td>Email:</td>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <td>Birthday:</td>
                <td><%= @user.birth_date %></td>
            </tr>
            <tr>
                <td>Favorite Class:</td>
                <td><%= @user.favorite_class %></td>
            </tr>
            <tr>
                <td>Bio:</td>
                <td><%= @user.bio %></td>
            </tr>
        </table>
        <% @getUserInfo.each do |comment| %>
        <div><%= @getUserInfo %></div>
       <div><%= comment.comment_text %></div>
        <% end %>
        <%= form_for Comment.new, url: create_comment_path do |f| %>
            <div class="form-group col-md-6">
            <%= f.hidden_field :users_id, :value => @user.id %>
            <%= f.hidden_field :sent_to, autocomplete: "off", :required => true, id: :comment_sent_to, :value => @user.id, :class => 'form-control' %>
            <%= f.text_area :comment_text, placeholder: "Write your comment here...", :class => 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
        <%= link_to 'Back', users_path, :class => "btn btn-light btn-sm" %>
    </div>
</div>


<p id="notice"><%= notice %></p>


