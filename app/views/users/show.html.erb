<div class="col-md-12">
    <div class="container col-md-8 offset-md-2">
        <h2 class="h2 text-center"><%= @user.fname %> <%= @user.lname %></h2>
        <br>
        <table class="table col-md-6 offset-md-3">
            <tr>
                <td>Email:</td>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <td>Birthday:</td>
                <td><%= @user.birth_date %></td>
            </tr>
            <tr>
                <td>Favorite Class:</td>
                <td><%= @user.favorite_class %></td>
            </tr>
            <tr>
                <td>Bio:</td>
                <td><%= @user.bio %></td>
            </tr>
        </table>
        <div class="text-center">
            <%= link_to 'Back', users_path, :class => "btn btn-light btn-sm" %> 
            <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-sm btn-light" %>
        </div>
    </div>
</div>
<p id="notice"><%= notice %></p>


