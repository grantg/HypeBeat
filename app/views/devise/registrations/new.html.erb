<div class="col-md-12">
  <div class="offset-md-4 col-md-4 container-login">
    <h2 class="h2 text-center">Create an Account</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-row">
        <div class="col">
          <%= f.text_field :fname, autofocus: true, :required => true, :placeholder => "First Name", :class => "form-control" %>
        </div>
        <div class="col">
          <%= f.text_field :lname, :required => true, :placeholder => "Last Name", :class => "form-control" %>
        </div>
      </div><br>
      
      <div class="form-group">
        <%= f.email_field :email, :required => true, autocomplete: "email", :placeholder => "Email", :class => "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email or data with anyone else.</small>
      </div>
      
      <div class="form-row">
        <div class="col">
          <%= f.date_field :birth_date, :required => true, autocomplete: "birthday", :placeholder => "Birthday", :class => "form-control" %>
        </div>
        <div class="col">
          <%= f.text_field :favorite_class, :required => true, :placeholder => "Favorite Class", :class => "form-control" %>
        </div>
      </div>
      <br>
      
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", :required => true,:placeholder => "Password (6 characters minimum)", :class => "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :required => true, :placeholder => "Confirm password", :class => "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.submit "Create Account", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>
    
    <div class="text-center">
      <%= link_to "Log In Instead", new_session_path(resource_name), :class => "btn btn-sm btn-light text-center" %>
    </div>
  </div>
</div>
