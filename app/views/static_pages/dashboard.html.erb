<div class="container">
    <div class="container-fluid" >
        <br>
        <h2 class="h2 text-center">Hey, <%= @getFName %>!</h2>
           <br>
           <div class="col-md-6 offset-md-3 profile-box">
               <div class="profile-text">
                   <div class="row">
                    <div class="col-md-6">Name:</div>
                    <div class="col-md-6"><%= @getFName %> <%= @getLName %></div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6">Email:</div>
                    <div class="col-md-6"><%= @getEmail %></div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6">Phone Number:</div>
                    <div class="col-md-6"><%= number_to_phone(@getPhoneNum, area_code: true) %></div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6">Address:</div>
                    <div class="col-md-6"><%= @getStreet %></div>
                </div>
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6"><%= @getCity %>, <%= @getState %></div>
                </div>
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6"><%= @getZip %></div>
                </div>
               </div>
            </div>
            
            <%= link_to 'Update Information', user_path(current_user), :class => "btn btn-sm btn-default" %>
        <div>
            <div>
                Item Name:
            </div>
            <input type="text" name="itemname">
            <div>
                Item Color:
            </div>
            <input type="text" name="itemcolor">
            <div>
                Item Size:
            </div>
            <input type="text" name="itemsize">
            <div>
                Credit Card Exp. Month:
            </div>
            <input type="text" name="CCExpireMonth">
            <div>
                Credit Card Exp. Year:
            </div>
            <input type="text" name="CCExpireYear">
            <div>
                Credit Card CVC:
            </div>
            <input type="text" name="CCCVC">
            <div>
                <br>
                <input type="submit" value="Start Bot">
            </div>
        </div>
    </div>
</div>